// This tsconfig is used for builds
{
  // https://github.com/vuejs/tsconfig
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "coverage"],
  "compilerOptions": {
    "module": "esnext",
    "isolatedModules": false,
    "composite": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["web"]
  },
  "vueCompilerOptions": {
    "target": 2.7
  }
}
